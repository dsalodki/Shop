@model GoodsCategoryViewModel

@{
    ViewBag.Title = "Изменение категории";
    Layout = "_Layout";
}

<h2>Изменение категории товаров</h2>

<span style="color: red">@ViewBag.Error</span>

@using (Html.BeginForm("Edit", "GoodsCategory", FormMethod.Post, new { id = Model.Id }))
{
<table>
    <thead>
    <tr>
        <th>Имя</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            @Html.TextBoxFor(m=>m.Name)
        </td>
    </tr>
    <tr>
        <td>
            <button type="submit">Сохранить</button>
        </td>
    </tr>
    </tbody>
</table>
}
